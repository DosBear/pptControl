<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="126dp"
            >


        <Button
                android:text="left"
                android:height="140dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnLeft" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="start"
                    android:height="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnStart" android:layout_weight="1"/>
            <Button
                    android:text="Stop"
                    android:height="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnStop" android:layout_weight="1"/>
            <Button
                    android:text="Empty"
                    android:height="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnEmpty" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="right"
                android:height="140dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnRight" android:layout_weight="1"/>
    </LinearLayout>

        <EditText
                android:text=""
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content" android:id="@+id/editText" />
        <Button
                android:text="Find ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnFindIp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>